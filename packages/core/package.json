{
  "name": "@edge-llm/core",
  "version": "0.1.0",
  "description": "Core runtime for edge-first LLM tool calling",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ryuheiyokokawa/edge-llm.git",
    "directory": "packages/core"
  },
  "engines": {
    "node": ">=18"
  },
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "clean": "rm -rf dist node_modules",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "llm",
    "edge",
    "tool-calling",
    "webllm",
    "transformers",
    "service-worker"
  ],
  "author": "Ryuhei Yokokawa",
  "license": "MIT",
  "dependencies": {
    "@mlc-ai/web-llm": "^0.2.79",
    "@huggingface/transformers": "^3.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "peerDependenciesMeta": {}
}
